{
    "compilerOptions": {
        // "target": "ES2020",
        // "module": "ESNext",
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "NodeNext",
        // "moduleResolution": "Node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
  }